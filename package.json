{
  "name": "i18next-auto-keys",
  "version": "4.0.0",
  "type": "commonjs",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "i18next-auto-keys": "dist/cli.js"
  },
  "files": [
    "dist/index.cjs",
    "dist/index.mjs",
    "dist/index.d.ts",
    "dist/cli.js"
  ],
  "description": "Automatic translation key generation for i18next",
  "author": "Vincent Au",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:js && npm run build:types && npm run build:clean",
    "build:js": "webpack --config webpack.build.config.js",
    "build:types": "node scripts/build-types.js",
    "build:clean": "node scripts/clean-build-artifacts.js",
    "clean": "rimraf dist",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:e2e": "npm run build && cd e2e && npm install && npm test",
    "test:all": "npm test && npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"e2e/**/*.ts\""
  },
  "dependencies": {
    "commander": "^12.1.0",
    "cosmiconfig": "^9.0.0",
    "glob": "^11.0.0",
    "magic-string": "^0.30.0",
    "schema-utils": "^4.3.3",
    "zod": "^4.1.12"
  },
  "optionalDependencies": {
    "gettext-parser": "^8.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/gettext-parser": "^8.0.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29",
    "@types/webpack": "^5",
    "rollup": "^4",
    "dts-bundle-generator": "^9.5.1",
    "esbuild-loader": "^4.4.0",
    "gettext-parser": "^8.0.0",
    "jest": "^29",
    "memfs": "^4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "unionfs": "^4",
    "webpack": "^5",
    "webpack-cli": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": "vinceau/i18next-auto-keys",
  "keywords": [
    "i18next",
    "translation",
    "webpack",
    "rollup",
    "vite",
    "loader",
    "plugin",
    "transformer"
  ]
}
