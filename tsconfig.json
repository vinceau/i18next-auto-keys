{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
  
      "baseUrl": ".",
      "paths": { "@/*": ["src/*"] },
  
      "types": ["node", "jest"]
    },
    "include": ["src", "test", "jest.config.ts"],
    "exclude": ["build", "dist", "node_modules"]
  }
  